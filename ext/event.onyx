#load "core/onyx/compiler_extension"

use onyx.compiler_extension {*}

use core.conv
use core {
    eprintf
    tprintf
    Result
}

main :: () {
    ext := ExtensionContext.make("Generate Event Procedures for Listening")
    ext->handle_macro("new_event_listener", handle_event)
    ext->start(message_handler)
}

